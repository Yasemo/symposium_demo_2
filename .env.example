# Symposium Demo Environment Configuration
# Copy this file to .env and fill in your values

# ==========================================
# GCP Configuration (Required for Cloud Services)
# ==========================================

# Your Google Cloud Project ID
GCP_PROJECT_ID=your-project-id

# GCP Region for services
GCP_REGION=us-central1

# Base64 encoded service account key (for auto-provisioning)
# Generate this with: gcloud iam service-accounts keys create key.json --iam-account=your-service-account@your-project.iam.gserviceaccount.com
# Then encode with: base64 -w 0 key.json
GCP_SERVICE_ACCOUNT_KEY=your-base64-encoded-service-account-key

# ==========================================
# Application Configuration
# ==========================================

# Environment (development/staging/production)
ENVIRONMENT=development

# Auto-provisioning mode (auto/manual/disabled)
# - auto: Automatically provision GCP services
# - manual: Use existing services (provide connection details below)
# - disabled: Use only local services
PROVISIONING_MODE=auto

# Monthly cost limit in USD (for auto-provisioning)
COST_LIMIT=100

# Server port
PORT=8000

# ==========================================
# AI Configuration
# ==========================================

# Your OpenRouter API key from https://openrouter.ai/
OPENROUTER_API_KEY=your-openrouter-api-key

# Default OpenRouter model (optional, defaults to gpt-4o-mini)
OPENROUTER_DEFAULT_MODEL=openai/gpt-4o-mini

# ==========================================
# Manual Service Configuration (for PROVISIONING_MODE=manual)
# ==========================================

# Cloud SQL PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
CLOUD_SQL_CONNECTION_STRING=postgresql://user:password@/symposium_db?host=/cloudsql/your-project/us-central1/your-instance

# Memorystore (Redis) connection string
# Format: redis://host:port
MEMORYSTORE_CONNECTION_STRING=redis://10.0.0.1:6379

# Cloud Storage bucket name
CLOUD_STORAGE_BUCKET=symposium-development-your-project

# ==========================================
# Development Overrides
# ==========================================

# Override auto-detection for local development with GCP services
FORCE_GCP_SERVICES=false

# Enable detailed logging
DEBUG_MODE=true

# ==========================================
# Security Configuration
# ==========================================

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Session secret for any session management
SESSION_SECRET=your-secure-random-string

# ==========================================
# Monitoring Configuration
# ==========================================

# Enable Prometheus metrics export
ENABLE_PROMETHEUS_METRICS=false

# Metrics collection interval (seconds)
METRICS_INTERVAL=10

# Alert thresholds
MEMORY_ALERT_THRESHOLD=500
ISOLATE_ALERT_THRESHOLD=8
CPU_ALERT_THRESHOLD=70
